<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wsinvmovil.Plantillas.Plantilla"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="0,10" Spacing="15">

            <!-- Imagen superior -->
            <Image Source="primeraimagen.png"
                   HeightRequest="200"
                   Aspect="AspectFill" />

            <!-- Contenedor principal -->
            <Border Stroke="LightGray"
                    StrokeShape="RoundRectangle 30"
                    StrokeThickness="1"
                    Padding="20"
                    Margin="10, -20, 10, 0"
                    BackgroundColor="{StaticResource PrimaryColor}">

                <!-- CONTENIDO PERSONALIZABLE -->
                <VerticalStackLayout x:Name="ContenidoPrincipal" Spacing="15">
                    <!-- AquÃ­ puedes insertar Labels, Entrys, Botones, Grids, etc. -->
                    <Label Text="Pantalla Base"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="Black" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
